{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "google"],
  "overrides": [
    {
      "files": ["src/**/*"],
      //   "excludedFiles": "*.test.js"
      "rules": {
        // Konfigurasi aturan khusus untuk folder src
        // Misalnya, Anda dapat menonaktifkan aturan yang tidak perlu diperiksa di folder src
        "linebreak-style": 0,
        "react/react-in-jsx-scope": 0,
        "react/jsx-no-comment-textnodes": 0,
        "require-jsdoc": 0,
        "new-cap": 0,
        "react/prop-types": 0,
        "react/no-unescaped-entities": 0,
        "max-len": 0,
        "no-unused-vars":0
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],

  //   membuat aturan secara global
  "rules": {}
}
